@using Modelo.Entidades

@model Materia
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creación de Materias</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Editar la materia @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="MateriaId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label">Área</label>
                    <input class="form-control" asp-for="Area" />
                </div>
                <div class="form-group">
                    <label class="control-label">No Créditos</label>
                    <input class="form-control" asp-for="Creditos" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

