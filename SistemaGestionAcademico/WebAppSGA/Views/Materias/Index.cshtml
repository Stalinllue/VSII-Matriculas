@using Modelo.Entidades

@model IEnumerable<Materia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de materias</h1>
<p>A continuación se presenta la lista de materias del Sistema Académico</p>

<div class = "container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Materias</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
                asp-controller="Materias" asp-action="Create">
                Crear nueva materia
            </a>
        </div>
    </div>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span ariaaria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }    

    <div class = "row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Área</td>
                    <td>Créditos</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach(Materia materia in Model)
                {
                    <tr>
                        <td>@materia.MateriaId</td>
                        <td>@materia.Nombre</td>
                        <td>@materia.Area</td>
                        <td>@materia.Creditos</td>
                        <td>
                            <a class="btn btn-warning"
                                asp-controller="Materias" asp-action="Edit" asp-route-id="@materia.MateriaId">
                                Editar
                            </a>
                            <a class="btn btn-danger"
                                asp-controller="Materias" asp-action="Delete" asp-route-id="@materia.MateriaId">
                                Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>