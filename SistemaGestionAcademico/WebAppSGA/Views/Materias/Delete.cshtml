@using Modelo.Entidades
@model Materia

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edición de Materias</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Confirmar el borrado de la materia: @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="MateriaId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" disabled />
                </div>
                <div class="form-group">
                    <label class="control-label">Área</label>
                    <input class="form-control" asp-for="Area" disabled />
                </div>
                <div class="form-group">
                    <label class="control-label">No Créditos</label>
                    <input class="form-control" asp-for="Creditos" disabled />
                </div>
                <div class="form-group">
                    <input type="submit" value="Confirmar borrado de la materia" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

