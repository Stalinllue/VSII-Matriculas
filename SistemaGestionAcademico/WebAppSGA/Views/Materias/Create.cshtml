@using Modelo.Entidades
@model Materia

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creación de la materia</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Nueva materia</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            
            <form method="post" asp-action="Create">

                <div class="form-group">
                    <label class="control-label">Nombre: </label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label">Área: </label>
                    <input class="form-control" asp-for="Area" />
                </div>
                <div class="form-group">
                    <label class="control-label">Número de Créditos: </label>
                    <input class="form-control" asp-for="Creditos" />
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear materia"  />
                </div>
            </form>

        </div>
    </div>

</div>
